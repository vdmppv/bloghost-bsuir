@model IEnumerable<Blog.Models.Article>
@{
    ViewData["Title"] = "Articles";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/DataTables/media/js/jquery.dataTables.js"></script>
<script src="~/lib/bootbox.js/bootbox.min.js"></script>

<h2>Articles</h2>
<table id="articles" class="table table-­‐bordered table-­‐hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Excerpt</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
    {
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js"></script>
    <script>$(document).ready(function () {


            var table = $("#articles").DataTable({
                ajax: {
                    url: "/get",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title",
                        render: function (data, type, article) {
                            return "<a href='/blog/" + article.slug + "'>" + article.title + "</a>";
                        }
                    },
                    {
                        data: "excerpt"
                    },
                ]
            });

        });</script>
}